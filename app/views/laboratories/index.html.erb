<p id="notice"><%= notice %></p>

<h1>Listing Laboratories</h1>

<table>
  <thead>
    <tr>
      <th>正式名</th>
      <th>技工士名</th>
      <th>郵便番号</th>
      <th>住所</th>
      <th>TEL</th>
      <th>FAX</th>
      <th>Email</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @laboratories.each do |laboratory| %>
      <tr>
        <td><%= laboratory.name %></td>
        <td><%= laboratory.hd_name %></td>
        <td><%= laboratory.zip_code %></td>
        <% href = 'https://www.google.co.jp/maps/place/'+laboratory.address.to_s %>
        <td><%= laboratory.address %><a href=<%= href %>>GOOGLE MAP</a></td>
        <td><%= laboratory.tel %></td>
        <td><%= laboratory.fax %></td>
        <td><%= laboratory.email %></td>
        <td><%= laboratory.remarks %></td>
        <td><%= link_to 'Show', laboratory %></td>
        <td><%= link_to 'Edit', edit_laboratory_path(laboratory) %></td>
        <td><%= link_to 'Destroy', laboratory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

